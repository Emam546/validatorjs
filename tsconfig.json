{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "ES2016",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}