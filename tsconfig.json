{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "compileOnSave": true,
  "include": [
    "src",
    "typings"
  ]
}